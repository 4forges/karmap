[Unit]
PartOf=<%= project_name %>-<%= service.name %>.target

[Service]
WorkingDirectory=<%= work_directory %>
Environment=PORT=%i
ExecStart=/bin/bash -lc '<%= service.command %>'
Restart=always
StandardInput=null
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=%n
KillMode=mixed
TimeoutStopSec=5
<% if service.process_config[:cpu_quota].present? -%>CPUAccounting=true<% end -%>
<% if service.process_config[:cpu_quota].present? -%>CPUQuota=<%= service.process_config[:cpu_quota] %>%<% end -%>
<% if service.process_config[:memory_max].present? -%>MemoryMax=<%= service.process_config[:memory_max] %><% end -%>
